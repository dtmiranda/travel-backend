// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    String   @default(uuid()) @id
  email String  @unique 
  password String

  @@map("users")
}

model Event{
  id String @default(uuid()) @id
  name String
  description String
  price Float
  start_date String
  end_date String
  event_hour String
  event_coodenate String

  @@map("events")
}






 
